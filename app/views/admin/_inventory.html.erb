<div class="inventory">
<h2>Inventory</h2>
<br/>
<div class="row">
	<div class="col-md-12">
		<%= form_for(:add_clothing, html: {class: "form-inline"}) do |f| %> 
			<label>Add Clothing</label><br/>
              <div class="form-group input-group">  
                <%= f.text_field :clothing_code, class: "form-control", placeholder: "Clothing Code" %>
              </div>
              <div class="form-group input-group"> 
              	<%= f.select(:gender, options_for_select(get_genders), {}, {class: "form-control btn btn-default"}) %>
              </div>
              <div class="form-group input-group">
              	<%= f.select(:clothing_type, options_for_select(get_types), {}, {class: "form-control btn btn-default"}) %>
              </div>
              <div class="form-group input-group">  
                <%= f.text_field :size, class: "form-control", placeholder: "Size" %>
              </div>
              <div class="form-group input-group">  
                <%= f.text_field :color, class: "form-control", placeholder: "Color" %>
              </div>
              <%= f.submit "Add Clothing", class: "btn btn-primary" %>
          <% end %>
	</div>
</div>
<br/>
<div class="row">
	<div class="col-md-6">
		<%= form_for(:remove_clothing, html: {class: "form-inline"}) do |f| %> 
			<label>Remove Clothing</label><br />
              <div class="form-group input-group">  
                <%= f.text_field :clothing_code, class: "form-control", placeholder: "Clothing Code" %>
              </div> 
              <%= f.submit "Remove Clothing", class: "btn btn-primary" %>
          <% end %>
	</div>
  <div class="col-md-6">
    <form class="form-inline">
      <label>Print Clothing Tag</label><br />
        <div class="form-group input-group"> 
          <input type="text" class="form-control" name="PrintClothingLabelValue" placeholder="Clothing Code"> 
        </div>
        <%= link_to "Print Clothing Tag", "#", onclick: "printClothingLabel()", class: "btn btn-primary" %>
    </form>
  </div>
</div>
</div>